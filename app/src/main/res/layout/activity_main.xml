<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/white"
                android:layout_weight="1"
                app:title="Road Safety"/>
            <ImageView
                android:layout_width="35dp"
                android:id="@+id/Profile"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10sp"
                android:src="@drawable/user"/>


        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_main"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboo"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="20sp"
            android:textSize="30sp"
            android:text="Welcome to Appname"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_us"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboo"
            android:textSize="25sp"
            android:text="@string/about_hindi"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/car"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginVertical="10sp"
            tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20px">


                <Button
                    android:id="@+id/report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttons"
                    android:padding="30px"
                    android:text="make complaint"
                    android:textColor="@color/texts" />

                <Button
                    android:id="@+id/record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttons"
                    android:padding="30px"
                    android:text="Accident alert"
                    android:textColor="@color/texts" />

                <Button
                    android:id="@+id/needHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttons"
                    android:padding="30px"
                    android:text="need Help ?"
                    android:textColor="@color/texts" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>