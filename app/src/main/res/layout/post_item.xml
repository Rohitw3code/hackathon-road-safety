<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    app:cardCornerRadius="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description" />

            <TextView
                android:id="@+id/address_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_post"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@id/linear_post"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_post">

            <ImageView
                android:id="@+id/up_vote_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:src="@drawable/baseline_arrow_upward_24" />

            <TextView
                android:id="@+id/up_vote_value_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/down_vote_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:src="@drawable/baseline_arrow_downward_24" />

            <TextView
                android:id="@+id/down_vote_value_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>